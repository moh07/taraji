<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/classement_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_marginBottom="3dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rang"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "5dp"
            android:background = "@color/red"
            android:textColor = "@color/white"/>

        <ImageView
            android:id = "@+id/img_equipe"
            android:layout_width = "0dp"
            android:layout_height = "30dp"
            android:layout_weight = "1"
            android:padding="3dp"
            android:ellipsize = "end"
            android:src="@drawable/tarajilogo"
            android:layout_gravity="center"
            android:singleLine = "true" />

        <TextView
            android:id = "@+id/nom_equipe"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "3"
            android:background = "@drawable/cell_shape"
            android:ellipsize = "end"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:singleLine = "true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:padding = "5dp"/>
    </LinearLayout>


    <TextView
        android:id = "@+id/j_equipe"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_weight = "1"
        android:background = "@drawable/cell_shape"
        android:ellipsize = "end"
        android:textColor="@color/black"
        android:singleLine = "true"
        android:gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:padding = "5dp"/>
    <TextView
        android:id = "@+id/g_equipe"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_weight = "1"
        android:background = "@drawable/cell_shape"
        android:ellipsize = "end"
        android:textColor="@color/black"
        android:singleLine = "true"
        android:gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:padding = "5dp"/>

    <TextView
        android:id = "@+id/n_equipe"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_weight = "1"
        android:background = "@drawable/cell_shape"
        android:ellipsize = "end"
        android:textColor="@color/black"
        android:singleLine = "true"
        android:gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:padding = "5dp"/>
    <TextView
        android:id = "@+id/p_equipe"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_weight = "1"
        android:background = "@drawable/cell_shape"
        android:ellipsize = "end"
        android:textColor="@color/black"
        android:singleLine = "true"
        android:gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:padding = "5dp"/>
    <TextView
        android:id = "@+id/bp_equipe"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_weight = "1"
        android:background = "@drawable/cell_shape"
        android:ellipsize = "end"
        android:textColor="@color/black"
        android:singleLine = "true"
        android:gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:padding = "5dp"/>


</LinearLayout>